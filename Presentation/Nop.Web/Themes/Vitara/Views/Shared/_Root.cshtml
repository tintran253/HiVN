@{
    Layout = "_Root.Head";
}
@await Component.InvokeAsync("Widget", new { widgetZone = "body_start_html_tag_after" })
@await Html.PartialAsync("_Notifications")
@await Html.PartialAsync("_JavaScriptDisabledWarning")
@await Html.PartialAsync("_OldInternetExplorerWarning")
<div class="master-wrapper-page" id="page">
    @await Component.InvokeAsync("AdminHeaderLinks")
    @await Html.PartialAsync("_Header")
    <script type="text/javascript" asp-location="Footer">
        AjaxCart.init(false, '.header-links .cart-qty', '.header-links .wishlist-qty', '#flyout-cart');
    </script>

    @await Component.InvokeAsync("TopMenu")

    @*<div class="header-menu">
        @await Component.InvokeAsync("TopMenu")
    </div>*@

    <div class="our-features-box hidden-xs">
        <div class="container">
            <div class="features-block">
                <div class="col-md-3 col-xs-12 col-sm-6">
                    <div class="feature-box first">
                        <span class="fa fa-truck">&nbsp;</span>
                        <div class="content">
                            <h3>@T("ttt.freeshippingworldwide")</h3>
                            @T("ttt.freeshippingworldwide.desc")
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-6">
                    <div class="feature-box">
                        <span class="fa fa-headphones">&nbsp;</span>
                        <div class="content">
                            <h3>@T("ttt.247customersupport")</h3>
                            @T("ttt.247customersupport.desc")
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-6">
                    <div class="feature-box">
                        <span class="fa fa-dollar">&nbsp;</span>
                        <div class="content">
                            <h3>@T("ttt.moneyback")</h3>
                            @T("ttt.moneyback.desc")
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-xs-12 col-sm-6">
                    <div class="feature-box last">
                        <span class="fa fa-mobile">&nbsp;</span>
                        <div class="content">
                            <h3>Hotline @T("ttt.phonenunmber")</h3>
                            @T("ttt.phonenunmber.desc")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <br />

    @*<div class="master-wrapper-content">*@
    <div class="container">
        @await Component.InvokeAsync("Widget", new { widgetZone = "content_before" })

        @if (IsSectionDefined("Breadcrumb"))
        {
            @RenderSection("Breadcrumb")
        }
        @*<div class="master-column-wrapper">*@
        <div class="row">
            @RenderBody()
        </div>
        @await Component.InvokeAsync("Widget", new { widgetZone = "content_after" })
    </div>
    @await Component.InvokeAsync("Footer")
</div>
@await Component.InvokeAsync("EuCookieLaw")
@await Component.InvokeAsync("Widget", new { widgetZone = "body_end_html_tag_before" })
